sig Graph { nodes: set Node, edges: nodes -> nodes } sig Node { adj : set Node } pred undirected { adj = ~adj } pred oriented { no adj & ~adj } pred acyclic { all a:Node | a not in a.^adj } pred complete { all n:Node | n in n.adj } pred noLoops { no (iden & adj) } sig WeaklyConnected {} pred weaklyConnected { all x : Node | x in x.*adj + ~(*adj).x } pred stonglyConnected { all n:Node | n in n.*adj } pred transitive { adj.adj in adj } pred weaklyConnectedOK { all n:Node | n in n.*(adj+~adj) } assert weaklyConnectedRepaired { weaklyConnected[] iff weaklyConnectedOK[] } check weaklyConnectedRepaired expect 0